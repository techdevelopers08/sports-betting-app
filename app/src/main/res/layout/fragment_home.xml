<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBgColor"
        tools:context=".ui.home.HomeFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <Button
                android:id="@+id/btnMyProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:backgroundTint="@color/colorSignIn"
                android:fontFamily="@font/font"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:text="@string/my_profile"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:cornerRadius="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline8"
                app:layout_constraintStart_toEndOf="@id/guideline7"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnTipping"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorSignIn"
                android:fontFamily="@font/font"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:text="@string/tipping"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:cornerRadius="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline8"
                app:layout_constraintStart_toEndOf="@id/guideline7"
                app:layout_constraintTop_toBottomOf="@+id/btnMyProfile" />

            <Button
                android:id="@+id/btnWizard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorEmailBtn"
                android:fontFamily="@font/font"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:text="@string/wizard_tips"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:cornerRadius="5dp"
                app:icon="@drawable/ic_lock"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline8"
                app:layout_constraintStart_toEndOf="@id/guideline7"
                app:layout_constraintTop_toBottomOf="@+id/btnTipping" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upgrade Account"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/colorBluish"
                android:fontFamily="@font/font"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnWizard" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>